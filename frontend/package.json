{
  "name": "sistema-pos-microbollos",
  "version": "1.0.0",
  "description": "Sistema POS para Microbollos",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev .",
    "build": "npm run build:css && npm run build:assets",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:assets": "mkdir -p dist && cp -r assets dist/ && cp -r js dist/ && cp index.html dist/",
    "deploy": "wrangler pages deploy .",
    "start": "npm run dev"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "itty-router": "^4.0.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230904.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.4",
    "wrangler": "^3.19.0"
  }
}
