{
  "name": "sistema-pos-microbollos",
  "version": "1.0.0",
  "description": "Sistema POS para Microbollos",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev .",
    "build": "npm run build:css && npm run build:js && npm run build:copy",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:js": "mkdir -p dist/js && cp -r js/* dist/js/",
    "build:copy": "mkdir -p dist && cp -r assets dist/ && cp index.html dist/",
    "deploy": "npm run build && wrangler pages deploy .",
    "start": "npm run dev"
  },
  "keywords": ["pos", "cloudflare", "workers"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "wrangler": "^3.0.0"
  }
}
