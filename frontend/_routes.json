{
    "version": 1,
    "include": ["/*"],
    "exclude": ["/functions/**", "/.git/**", "/node_modules/**"],
    "routes": [
        {
            "pattern": "/api/auth/login",
            "methods": ["POST", "OPTIONS"]
        },
        {
            "pattern": "/api/auth/me",
            "methods": ["GET", "OPTIONS"]
        },
        {
            "pattern": "/api/auth/logout",
            "methods": ["POST", "OPTIONS"]
        },
        {
            "pattern": "/api/products",
            "methods": ["GET", "POST", "OPTIONS"]
        },
        {
            "pattern": "/api/products/*",
            "methods": ["GET", "PUT", "DELETE", "OPTIONS"]
        },
        {
            "pattern": "/api/quotes",
            "methods": ["GET", "POST", "OPTIONS"]
        },
        {
            "pattern": "/api/quotes/*",
            "methods": ["GET", "PUT", "DELETE", "OPTIONS"]
        },
        {
            "pattern": "/api/suppliers",
            "methods": ["GET", "POST", "OPTIONS"]
        },
        {
            "pattern": "/api/suppliers/*",
            "methods": ["GET", "PUT", "DELETE", "OPTIONS"]
        },
        {
            "pattern": "/api/system/*",
            "methods": ["GET", "OPTIONS"]
        }
    ]
}