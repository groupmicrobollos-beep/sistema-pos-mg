{
    "version": 1,
    "include": [
        "/*"
    ],
    "exclude": [
        "/functions/**",
        "/.git/**",
        "/node_modules/**",
        "/.wrangler/**",
        "/src/**",
        "package*.json",
        "wrangler.toml"
    ],
    "routes": [
        {
            "pattern": "^/api/auth/login$",
            "function": "api",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/api/auth/logout$",
            "function": "api",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/api/auth/me$",
            "function": "api",
            "methods": [
                "GET",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/api/products/.*$",
            "function": "api",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/api/quotes/.*$",
            "function": "api",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/api/suppliers/.*$",
            "function": "api",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/api/.*$",
            "function": "api",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "^/assets/.*$",
            "serve": "/assets/:splat"
        },
        {
            "pattern": "^/dist/.*$",
            "serve": "/dist/:splat"
        },
        {
            "pattern": "^/js/.*$",
            "serve": "/js/:splat"
        },
        {
            "pattern": "^/(?:[^.]+|)$",
            "serve": "/index.html",
            "statusCode": 200
        },
    

        {
            "pattern": "/api/products",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ]
        },
        {
            "pattern": "/api/products/*",
            "methods": [
                "GET",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "/api/quotes",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ]
        },
        {
            "pattern": "/api/quotes/*",
            "methods": [
                "GET",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "/api/suppliers",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ]
        },
        {
            "pattern": "/api/suppliers/*",
            "methods": [
                "GET",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "pattern": "/api/system/*",
            "methods": [
                "GET",
                "OPTIONS"
            ]
        }
    ]
}